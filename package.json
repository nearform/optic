{
  "name": "optic",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "react-app-rewired build",
    "dev": "run-p dev:*",
    "dev:client": "react-app-rewired start",
    "dev:env": "node server/bin/prepare-env",
    "dev:server": "nodemon --exec \"node server/bin/www -w server\"",
    "eject": "react-scripts eject",
    "heroku-postbuild": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write '**/*.js?(on)' '**/*.scss'",
    "start": "node server/index.js",
    "test": "react-app-rewired test"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.1",
    "@graphql-tools/merge": "^8.2.0",
    "@graphql-tools/schema": "^8.3.0",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "classnames": "^2.2.6",
    "close-with-grace": "^1.1.0",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.9",
    "dotenv": "^10.0.0",
    "env-schema": "^3.4.0",
    "expo-server-sdk": "^3.6.0",
    "fastify": "^3.22.1",
    "fastify-auth": "^1.1.0",
    "fastify-autoload": "^3.8.0",
    "fastify-cors": "^6.0.2",
    "fastify-static": "^4.4.2",
    "firebase": "^9.1.3",
    "firebase-admin": "^10.0.0",
    "fluent-json-schema": "^3.0.1",
    "graphql-constraint-directive": "^2.1.1",
    "i": "^0.3.7",
    "localforage": "^1.7.3",
    "mercurius": "^8.7.0",
    "morgan": "^1.9.0",
    "npm": "^8.1.0",
    "otplib": "^10.0.1",
    "qr-scanner": "^1.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-firebaseui": "^3.1.2",
    "react-qr-reader": "^2.1.2",
    "uniqid": "^5.0.3",
    "url-otpauth": "^2.0.0",
    "web-push": "^3.3.3",
    "workbox-precaching": "^4.0.0"
  },
  "devDependencies": {
    "before-build-webpack": "^0.2.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "lodash": "^4.17.11",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^4.0.0",
    "react-app-rewired": "^2.1.0",
    "react-scripts": "^2.1.5",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{server,src}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:3001",
  "nodemonConfig": {
    "watch": [
      "server",
      ".env"
    ]
  }
}
