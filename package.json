{
  "name": "optic",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "react-app-rewired build",
    "dev": "run-p dev:*",
    "dev:client": "react-app-rewired start",
    "dev:env": "node server/bin/prepare-env",
    "dev:server": "nodemon --exec \"node -r dotenv/config server/bin/www -w server\"",
    "eject": "react-scripts eject",
    "heroku-postbuild": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write '**/*.js?(on)' '**/*.scss'",
    "start": "node -r dotenv/config server/bin/www",
    "test": "react-app-rewired test"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.9",
    "dotenv": "^6.2.0",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.16.0",
    "express-promise-router": "^3.0.3",
    "firebase": "^8.4.3",
    "firebase-admin": "^9.7.0",
    "localforage": "^1.7.3",
    "morgan": "^1.9.0",
    "otplib": "^10.0.1",
    "qr-scanner": "^1.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-firebaseui": "^3.1.2",
    "react-qr-reader": "^2.1.2",
    "uniqid": "^5.0.3",
    "url-otpauth": "^2.0.0",
    "web-push": "^3.3.3",
    "workbox-precaching": "^4.0.0"
  },
  "devDependencies": {
    "before-build-webpack": "^0.2.8",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "lodash": "^4.17.11",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-app-rewired": "^2.1.0",
    "react-scripts": "^2.1.5",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{server,src}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:3001",
  "nodemonConfig": {
    "watch": [
      "server",
      ".env"
    ]
  }
}
